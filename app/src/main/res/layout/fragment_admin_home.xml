<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp">

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_active_manage"
        style="@style/mehdiButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="0.5dp"
        fancy:fb_defaultColor="#FB6525"
        fancy:fb_focusColor="#bd4c1c"
        fancy:fb_fontIconSize="20dp"
        fancy:fb_iconPosition="top"
        fancy:fb_iconResource="@mipmap/icon_active_manage"
        fancy:fb_radius="3dp"
        fancy:fb_text="活 动 管 理"
        fancy:fb_textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_duty"
                style="@style/mehdiButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="0.5dp"
                fancy:fb_defaultColor="#CD50FF"
                fancy:fb_focusColor="#9a39c1"
                fancy:fb_fontIconSize="20dp"
                fancy:fb_iconPosition="top"
                fancy:fb_iconResource="@mipmap/icon_on_duty"
                fancy:fb_radius="3dp"
                fancy:fb_text="值 班 情 况"
                fancy:fb_textColor="#FFFFFF" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_training"
                style="@style/mehdiButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="0.5dp"
                fancy:fb_defaultColor="#FFD602"
                fancy:fb_focusColor="#c3a60d"
                fancy:fb_fontIconSize="20dp"
                fancy:fb_iconPosition="top"
                fancy:fb_iconResource="@mipmap/icon_training"
                fancy:fb_radius="3dp"
                fancy:fb_text="培 训 情 况"
                fancy:fb_textColor="#FFFFFF" />

        </LinearLayout>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_rank"
            style="@style/mehdiButton"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="0.5dp"
            fancy:fb_defaultColor="#16B7FA"
            fancy:fb_focusColor="#18a4ae"
            fancy:fb_fontIconSize="20dp"
            fancy:fb_iconPosition="bottom"
            fancy:fb_iconResource="@mipmap/icon_rank"
            fancy:fb_radius="3dp"
            fancy:fb_text="排 名\n情 况"
            fancy:fb_textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_morning_read"
            style="@style/mehdiButton"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="0.5dp"
            fancy:fb_defaultColor="#6881c1"
            fancy:fb_focusColor="#4d65a4"
            fancy:fb_fontIconSize="20dp"
            fancy:fb_iconPosition="top"
            fancy:fb_iconResource="@mipmap/icon_morning_read"
            fancy:fb_radius="3dp"
            fancy:fb_text="晨 读"
            fancy:fb_textColor="#FFFFFF" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_run"
            style="@style/mehdiButton"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="0.5dp"
            fancy:fb_defaultColor="#79c840"
            fancy:fb_focusColor="#529126"
            fancy:fb_fontIconSize="20dp"
            fancy:fb_iconPosition="top"
            fancy:fb_iconResource="@mipmap/icon_run"
            fancy:fb_radius="3dp"
            fancy:fb_text="跑 操"
            fancy:fb_textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>